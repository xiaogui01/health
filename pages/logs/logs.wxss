.header {
	background: #8aa6ef;
	padding: 30rpx;
  width:100%;
}
.header .avatar {
	display: block;
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	border: 2px solid #fff;
}
.avatar{
  margin-left: 16px;
}
.header .nickname {
	color: #fff;
	font-size: 22px;
	line-height: 2.4;
	text-align: center;
}
.section {
  width:100%;
	padding: 0;
	color: #2e2e2e;
	font-size: 30rpx;
}
.section .line {
	text-indent: 1rem;
	padding-right: 30rpx;
	line-height: 4;
	border-bottom: 1px solid #efefef;
}
.section .line:before {
	content: '>';
	float: right;
	color: #aaa;
}
.section .line .tl {
	float: right;
	color: #aaa;
}
